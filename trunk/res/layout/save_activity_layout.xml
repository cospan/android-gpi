<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent" 
  	android:layout_height="fill_parent"
  	android:orientation="vertical">
	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:orientation="horizontal" 
		android:id="@+id/LinearLayout01">
			<ImageView 
				android:layout_weight="1" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:id="@+id/save_back_button" 
				android:src="@drawable/back">
			</ImageView>
			<ImageView 
				android:layout_gravity="right" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:clickable="true" 
				android:id="@+id/save_updir_button" 
				android:src="@drawable/updir" android:layout_weight="1">
			</ImageView>	
			<ImageView 
				android:layout_gravity="right" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:clickable="true" 
				android:id="@+id/save_newfolder_button" 
				android:src="@drawable/newfolder" android:layout_weight="1">
			</ImageView>		
			<ImageView 
				android:layout_gravity="right" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:clickable="true" 
				android:id="@+id/save_save_button" 
				android:src="@drawable/save">
			</ImageView>
		</LinearLayout>
		<View 
		android:layout_height="2dip" 
		android:layout_width="fill_parent" 
		android:background="#FFFFFFFF">
		</View>
		<TextView 
			android:text="Status" 
			android:id="@+id/save_status_text_view" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
		</TextView>
		<View 
		android:layout_height="2dip" 
		android:layout_width="fill_parent" 
		android:background="#FFFFFFFF">
		</View>		
		<TextView 
			android:text="DIR!!!" 
			android:id="@+id/save_file_address_text_view" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
		</TextView>
		<View 
		android:layout_height="2dip" 
		android:layout_width="fill_parent" 
		android:background="#FFFFFFFF">
		</View>
		<EditText 
			android:layout_width="fill_parent" 
			android:text="GpiSave.gpi" 
			android:layout_height="wrap_content"  
			android:lines="1" android:id="@+id/save_filename_edittext">
		</EditText>
		<View 
		android:layout_height="2dip" 
		android:layout_width="fill_parent" 
		android:background="#FFFFFFFF">
		</View>		
		<ListView 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:id="@+id/save_file_list_view">
		</ListView>



</LinearLayout>

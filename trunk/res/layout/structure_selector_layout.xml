<?xml version="1.0" encoding="utf-8"?>


<LinearLayout 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/StructureManagerLayout" 
	android:orientation="vertical">
	<TableLayout 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<TableRow 
			android:layout_height="fill_parent" 
			android:layout_width="fill_parent">
			<ImageView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:src="@drawable/back" 
				android:id="@+id/StructureManagerBackView">
			</ImageView>
			<TextView 
				android:text="Structure Selector" 
				android:textStyle="bold" 
				android:layout_gravity="center" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content">
			</TextView>
		</TableRow>
		<View 
			android:layout_height="2dip" 
			android:layout_width="fill_parent" 
			android:background="#FFFFFF">
		</View>


	<TableRow 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent">
		<TextView 
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:layout_weight="1" 
			android:text="Structures">
		</TextView>
		<Button 
			android:layout_height="wrap_content" 
			android:text="Add New Structure" 
			android:layout_width="wrap_content" 
			android:layout_weight="1" 
			android:id="@+id/AddNewStructureButton">
		</Button>
	</TableRow>
	<View 
		android:layout_height="2dip" 
		android:layout_width="fill_parent" 
		android:background="#FFFFFF">
	</View>
</TableLayout>
<ListView 
	android:id="@+id/StructureList" 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent">
</ListView>
</LinearLayout>

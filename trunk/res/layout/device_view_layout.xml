<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/deviceLinearLayout"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#0000"
	>
	<Gallery
		android:id="@+id/ControllerGallery"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#FFFF" android:minHeight="50dip">
	</Gallery>
	<Gallery
		android:id="@+id/MediumGallery"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#FFFF" android:minHeight="50dip">
	</Gallery>
	<Gallery
		android:id="@+id/DeviceGallery"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#FFFF" android:minHeight="50dip">
	</Gallery>
	
	<TableLayout 
		android:layout_width="fill_parent" 
		android:id="@+id/DeviceViewTable" 
		android:layout_height="wrap_content">
		<TableRow 
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:weightSum="2">
			<TextView 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:text="Name:" 
				android:layout_weight="1"
			/>
			<TextView 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:id="@+id/EntityNameValue" 
				android:layout_weight="1" 
				android:text="Name"/>
			</TableRow>
		<TableRow 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
			<TextView 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:text="Info:" 
				android:layout_weight="1" 
				/>
			<TextView 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:id="@+id/EntityInfoValue" 
				android:layout_weight="1" 
				/>
			</TableRow>

	</TableLayout>
	<ScrollView 
		android:layout_height="fill_parent" 
		android:layout_width="fill_parent" android:scrollbars="vertical">
		<TableLayout 
			android:id="@+id/DeviceViewPropertyTable" 
			android:layout_height="fill_parent" 
			android:layout_width="fill_parent" 
			android:isScrollContainer="false" 
			android:scrollbars="vertical">
	
		</TableLayout>
	</ScrollView>
	
	
</LinearLayout>

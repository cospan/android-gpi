<?xml version="1.0" encoding="utf-8"?>


<LinearLayout 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/ChannelLayout" 
	android:orientation="vertical"
	>
	<TableLayout 
		android:layout_height="wrap_content" 
		android:id="@+id/ChannelNameInfoTable" 
		android:layout_width="fill_parent"
		>
		<TableRow 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			>
			<LinearLayout 
				android:layout_width="wrap_content" 
				android:layout_height="fill_parent" 
				android:orientation="vertical"
				>
				<ImageView 
					android:id="@+id/ChannelBackImageView" 
					android:src="@drawable/back" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"
					>
				</ImageView>
				<ImageView 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:id="@+id/ChannelIconImageView" 
					android:background="#FFFFFFFF" 
					android:src="@drawable/channel"
					>
				</ImageView>

			</LinearLayout>
			<View 
				android:background="#FFFFFF" 
				android:layout_width="2dip" 
				android:layout_height="fill_parent"
				>
			</View>
			<TableLayout 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:layout_weight="1"
				>
				<TableRow 
					android:layout_height="wrap_content" 
					android:layout_width="fill_parent"
					>
					<TextView 
						android:layout_height="wrap_content" 
						android:layout_width="fill_parent" 
						android:layout_weight="1" 
						android:text="Name">
					</TextView>

					<EditText 
						android:layout_height="wrap_content" 
						android:layout_width="fill_parent" 
						android:layout_weight="1" 
						android:id="@+id/ChannelNameEditText" 
						android:text="PubSub:ChannelName"
					>
					</EditText>
				</TableRow>
					<View 
						android:layout_width="fill_parent" 
						android:layout_height="2dip" 
						android:background="#FFFFFF"
						>
					</View>
				<TableRow 
					android:layout_height="wrap_content" 
					android:layout_width="fill_parent"
					>
					<TextView 
						android:layout_height="wrap_content" 
						android:layout_width="fill_parent" 
						android:layout_weight="1" 
						android:text="Description"
						>
					</TextView>
					<EditText 
						android:layout_height="wrap_content" 
						android:layout_width="fill_parent" 
						android:layout_weight="1" 
						android:id="@+id/ChannelInfoEditText" 
						android:text="BoardID:PubSub"
						>
					</EditText>
				</TableRow>
			</TableLayout>
		</TableRow>
	</TableLayout>
	<View 
		android:layout_width="fill_parent" 
		android:layout_height="2dip" 
		android:background="#FFFFFF"
		>
	</View>
	<TableLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		>
		<TableRow 
			android:weightSum="2" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			>
			<LinearLayout 
				android:layout_width="fill_parent" 
				android:layout_weight="1" 
				android:orientation="vertical" 
				android:layout_height="fill_parent"
				>
				<TextView 
					android:layout_height="wrap_content" 
					android:text="Select Structure" 
					android:layout_width="fill_parent" 
					android:layout_weight="1"
					>
				</TextView>
				<TextView 
					android:layout_height="wrap_content" 
					android:layout_width="fill_parent" 
					android:id="@+id/ChannelStructureNameTextView"
					>
				</TextView>
			</LinearLayout>
			<Button 
				android:layout_height="wrap_content" 
				android:id="@+id/StructureChooserButton" 
				android:layout_width="fill_parent" 
				android:layout_weight="1" 
				android:text="Structures"
				>
			</Button>
		</TableRow>
	</TableLayout>
	<View 
		android:layout_width="fill_parent" 
		android:layout_height="2dip" 
		android:background="#FFFFFF"
		>
	</View>
	<TableLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:id="@+id/ChannelMemberTableLayout"
		>
	</TableLayout>
</LinearLayout>
